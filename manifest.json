{
  "manifest_version": 3,
  "name": "Copy & Paste Mapper",
  "version": "1.0.0",
  "description": "Map source elements to destination inputs and replay projects.",
  "permissions": [
    "tabs",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "contentScript.js"
      ],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "app.html",
        "app.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
